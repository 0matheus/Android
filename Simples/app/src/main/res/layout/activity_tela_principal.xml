<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matheuslino.com.simples.TelaPrincipal">


    <EditText
        android:id="@+id/valor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Valor 1" />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/valor1"
        android:layout_alignStart="@+id/valor1"
        android:layout_below="@+id/valor1"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Valor 1" />

    <Button
        android:id="@+id/btn_somar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Somar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_somar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="" />
</RelativeLayout>
